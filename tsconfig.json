{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
		"sourceMap": true,
		"baseUrl": ".",
    "paths": {
			"@app/*": ["src/app/*"],
			"@domain/*": ["src/domain/*"],
			"@infra/*": ["src/infra/*"],
			"@main/*": ["src/main/*"],
			"@shared/*": ["src/shared/*"]
		},
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
  },
	"include": [
		"src/**/*"
	]
}
